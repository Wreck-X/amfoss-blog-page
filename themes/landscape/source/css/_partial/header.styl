#header
  position: relative
  height: auto
  border-bottom: 1px solid color-border
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 40px
  &:before
    top: 0
    background: linear-gradient(rgba(0, 0, 0, 0.2), transparent)
  &:after
    bottom: 0
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.2))

#header-outer
  height: 100%

button  

#header-inner
  position: relative
  overflow: hidden
  z-index: 1;

#logo-image
  display: block
  margin: 0 auto
  max-width: 100%

#header-title
  text-align: center

#logo
  text-decoration: none
  color: black
  font-weight: 300
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3)
  font-size: 2.5em
  letter-spacing: 2px

#subtitle
  font-size: 1.5em
  line-height: 1.5em
  letter-spacing: 1px
  color: black
  size: 10px

#subtitle-wrap
  position: absolute;
  bottom: 30px;
  left: 50%; 
  transform: translateX(-50%);
  margin-bottom: 0;

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: #fff
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 10px 15px;
  &:hover
    opacity: 1

.nav-icon
  color: black
  @extend $nav-link
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 10px 15px;
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  color: black
  display: block
  padding: 10px 15px;

@media mq-mobile
  .main-nav-link
    display: none

#main-nav-toggle
  display: none

@media mq-mobile
  #main-nav-toggle
    display: block

#sub-nav
  color: black
  float: right
  margin-right: -15px

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out

&.on
  opacity: 1
  right: 0

@media mq-mobile
  #search-form-wrap
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777

@media (max-width: 768px)
  #banner
    width: 100%
    top: 10%
