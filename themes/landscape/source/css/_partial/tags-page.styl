body
  font-family: Arial, sans-serif
  line-height: 1.6
  margin: 0
  padding: 0

header
  background-color: #333
  color: #fff
  padding: 10px
  text-align: center

main
  max-width: 800px
  margin: 20px auto
  padding: 0 20px

.tags-list
  margin-bottom: 20px

.tags-list h2
  font-size: 24px
  margin-bottom: 10px

.tags-list ul
  list-style-type: none
  padding: 0

.tags-list li
  margin-bottom: 10px

.tags-list a
  color: #333
  text-decoration: none

.tags-list a:hover
  text-decoration: underline

footer
  background-color: #333
  color: #fff
  padding: 10px
  text-align: center
  position: fixed
  bottom: 0
  width: 100%
